<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView5"
        style="@android:style/TextAppearance.DialogWindowTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogTitle"
        android:textColor="@color/White" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/editTextIP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="192"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="3"
            android:layout_weight="1"
            android:nextFocusForward="@+id/editTextIP2"
            android:theme="@style/MyEditText" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:layout_weight="1"
            android:textColor="@color/White" />


        <EditText
            android:id="@+id/editTextIP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="168"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:layout_weight="1"
            android:maxLength="3"
            android:nextFocusForward="@+id/editTextIP3"
            android:theme="@style/MyEditText" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:layout_weight="1"
            android:textColor="@color/White" />


        <EditText
            android:id="@+id/editTextIP3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="100"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:layout_weight="1"
            android:maxLength="3"
            android:nextFocusForward="@+id/editTextIP4"
            android:theme="@style/MyEditText" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."

            android:layout_weight="1"
            android:textColor="@color/White" />

        <EditText
            android:id="@+id/editTextIP4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="100"
            android:imeOptions="actionGo"
            android:inputType="number"
            android:maxLength="3"
            android:layout_weight="1"
            android:theme="@style/MyEditText" />

        <Button
            android:id="@+id/removeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:drawableStart="@drawable/ic_close_white_24dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            />


    </LinearLayout>


<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Mirko1" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow</item>
        <item name="colorAccent">@color/accent_material_dark_1</item>
        <item name="android:colorForeground">@color/foreground_material_dark</item>
    </style>

    <style name="Theme.Mirko2" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow</item>
        <item name="android:textColorPrimaryInverse">@color/colorBackground</item>
    </style>
    <style name="MyEditText" parent="Theme.Mirko1">

        <item name="colorAccent">@color/White</item>
        <item name="android:textColor">@color/White</item>
    </style>
    <style name="Toolbar1" parent="@style/Theme.Design.Light.NoActionBar">
        <item name="colorControlHighlight">@color/White</item>
    </style>
    <style name="Toolbar2" parent="@style/Theme.Design.Light.NoActionBar">
        <item name="colorControlHighlight">@color/Black</item>
    </style>

    <style name="Theme.Design.Test1" parent="Theme.Design" />

    <!-- Base application theme. -->


    <style name="Widget.ActionButton.Overflow" parent="@android:style/Widget.DeviceDefault.ActionButton.Overflow">
        <item name="android:contentDescription">@string/overflow</item>
    </style>
</resources>
